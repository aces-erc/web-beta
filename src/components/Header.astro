---
import Navigation from '../components/Navigation.astro'
import { SkipLinks } from 'accessible-astro-components'
import { Icon } from 'astro-icon'
---

<header>
  <SkipLinks />
  <Navigation>
    <li class="menu-item">
      <a href="/">Home</a>
    </li>
    <li class="menu-item">
      <a href="/events/">Events</a>
    </li>
    <li class="menu-item">
      <a href="https://accessible-astro.dev" title="external link" rel="external noopener noreferrer">Blog</a>
    </li>
    <li class="menu-item has-dropdown">
      <button aria-haspopup="true" aria-expanded="false">About</button>
      <ul class="dropdown-menu">
        <li class="submenu-item">
          <a href="/mdx-page/">Comittee (MDX Page)</a>
        </li>
        <li class="submenu-item">
          <a href="/markdown-page/">Gallary (Markdown Page)</a>
        </li>
        <li class="submenu-item">
          <a href="/accessible-components">Accessible Components</a>
        </li>
      </ul>
    </li>

    <li class="menu-item type-icon">
      <a href="https://discord.gg/BAR3Mypc" title="Go to the GitHub page">
        <Icon pack="ion" name="logo-discord" />
      </a>
    </li>
  </Navigation>
</header>

<style lang="scss" is:global>
  @use '../assets/scss/base/outline' as *;

  header {

    .type-icon a {
      display: block;

      [astro-icon] {
        margin-top: -4px;
        width: 35px;

        path {
          fill: var(--action-color);
          transition: fill 0.2s ease-in-out;
        }
      }

      &:hover {
        [astro-icon] path {
          fill: var(--action-color-state);
        }
      }
    }
  }
</style>
